@model WHITELABEL.Data.Models.TBL_BALANCE_TRANSFER_LOGS
@using WHITELABEL.Data.Models
@using WHITELABEL.Web.Helper;
@{
    ViewBag.Title = "Requisition Details";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("RequisitionDetails", "Requisition", FormMethod.Post))
{
    <div class="form-horizontal padding-top-20">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.SLN)
        @Html.HiddenFor(model => model.FROM_MEMBER)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-heading">
                    </div><!--.panel-heading-->
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div  class="">
                                    <div class="input-wrapper">
                                        @Html.HiddenFor(model => model.FROM_MEMBER)
                                        @Html.HiddenFor(model => model.SLN)
                                        <label for="FROM_MEMBER">USER LIST</label>
                                        @Html.AutocompleteFor(model => model.FromUser, model => model.FROM_MEMBER, "GetPeople", "Requisition", false, new { htmlAttributes = new { @class = "form-control" , autocomplete = "off" } })
                                        @*@Html.DropDownListFor(model => model.FromUser, new SelectList((ViewBag.MemberService) as SelectList, "Value", "Text"), "Select Member", new { id = "MemberID", @class = "form-control" })*@                                        
                                        @Html.ValidationMessageFor(model => model.FromUser, "", new { @class = "text-danger" })
                                    </div>
                                    @*<span>@Html.ValidationMessageFor(model => model.ToUser, "", new { @class = "text-danger" })</span>*@
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="">
                                    <div class="input-wrapper">
                                        <label for="REQUEST_DATE">REQUEST DATE</label>
                                        @Html.EditorFor(model => model.REQUEST_DATE, "{0:yyyy-MM-dd}", new { htmlAttributes = new {  @class = "form-control" } })
                                       
                                    </div>
                                    <span>@Html.ValidationMessageFor(model => model.REQUEST_DATE, "", new { @class = "text-danger" })</span>
                                </div>
                            </div>
                            <div class="clearfix"></div>

                            <div class="col-md-6">
                                <div class="">
                                    <div class="input-wrapper">
                                        <label for="AMOUNT">AMOUNT</label>
                                        @Html.EditorFor(model => model.AMOUNT, new { htmlAttributes = new { @class = "form-control", @placeholder = "XXXXX.XX" } })
                                        @*<label for="AMOUNT">AMOUNT</label>*@
                                    </div>
                                    <span>@Html.ValidationMessageFor(model => model.AMOUNT, "", new { @class = "text-danger" })</span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="">
                                    <div class="input-wrapper">
                                        <label for="BANK_ACCOUNT">BANK ACCOUNT</label>
                                        @Html.DropDownListFor(model => model.BANK_ACCOUNT, new SelectList((ViewBag.BankInformation) as SelectList, "Text", "Text"), "Select Bank", new { id = "BankID", @class = "form-control" })
                                    
                                    </div>
                                    <span>@Html.ValidationMessageFor(model => model.BANK_ACCOUNT, "", new { @class = "text-danger" })</span>
                                </div>
                            </div>

                            <div class="clearfix"></div>
                            <div class="col-md-6">
                                <div class="">
                                    <div class="input-wrapper">
                                        <label for="PAYMENT_METHOD">PAYMENT METHOD</label>
                                      @Html.DropDownListFor(m => m.PAYMENT_METHOD, new List<SelectListItem>
                                                            { new SelectListItem{Text="NEFT", Value="NEFT"},
                                                            new SelectListItem{Text="RTGS", Value="RTGS"},
                                                            new SelectListItem{Text="IMPS", Value="IMPS"},
                                                            new SelectListItem{Text="Cash Deposit in bank", Value="Cash Deposit in bank"}}, 
                                                            "Select Payment Method",  new { id = "Paymentmethod", @class = "form-control" })
                                        
                                    </div>
                                    <span>@Html.ValidationMessageFor(model => model.TRANSACTION_DETAILS, "", new { @class = "text-danger" })</span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="">
                                    <div class="input-wrapper">
                                        <label for="TRANSACTION_DETAILS">TRANSACTION DETAILS</label>
                                        @Html.EditorFor(model => model.TRANSACTION_DETAILS, new { htmlAttributes = new { @class = "form-control", @placeholder = "Transaction Details" } })
                                        @*<label for="TRANSACTION_DETAILS">TRANSACTION DETAILS</label>*@
                                    </div>
                                    <span>@Html.ValidationMessageFor(model => model.TRANSACTION_DETAILS, "", new { @class = "text-danger" })</span>
                                </div>
                            </div>
                        </div><!--.row-->
                    </div><!--.panel-body-->

                    <div class="panel-footer">
                        <div class="col-lg-6">
                           
                        </div>

                        <div class="col-lg-6 text-right">
                            @if (ViewBag.checkbank == "0")
                {
                                <input type="submit" value="Create" class="btn btn-cyan" />
                            }
                            else
                            {
                                <input type="submit" value="Update" class="btn btn-cyan" />
                            }

                        </div>
                        <div class="clearfix"></div>
                    </div>

                </div><!--.panel-->
            </div><!--.col-md-12-->
        </div>
       
    </div>
}


