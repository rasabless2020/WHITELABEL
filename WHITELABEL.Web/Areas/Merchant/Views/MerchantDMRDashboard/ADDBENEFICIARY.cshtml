@using (Ajax.BeginForm("PostDMRBenificiaryform", "MerchantDMRDashboard", new AjaxOptions { OnSuccess = "OnSuccessMsg", OnFailure = "OnFailureMsg", LoadingElementId = "progressMsg" }, new { area = "Merchant",id="AddDMRBeneficiaryInfo" }))
{
