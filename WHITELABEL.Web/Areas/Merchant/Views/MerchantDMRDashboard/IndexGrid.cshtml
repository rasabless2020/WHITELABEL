@using NonFactors.Mvc.Grid;
@using WHITELABEL.Web.Helper;
@model IEnumerable<WHITELABEL.Data.Models.TBL_REMITTER_BENEFICIARY_INFO>
@{
    ViewBag.Title = "IndexGrid";
    Layout = null;
