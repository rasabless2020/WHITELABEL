@model WHITELABEL.Web.Areas.Merchant.Models.DMRRegistrationViewModel
@{
    ViewBag.Title = "Add Beneficiary";
    Layout = "~/Areas/Merchant/Views/Shared/_MerchantLayout.cshtml";
}
@using (Html.BeginForm("AddNewSender", "MerchantDMRRegistration", FormMethod.Post, new { area = "Merchant" }))
{
    <div class="display-animation margin-top-40">
        <div class="row no-gutters">
            <div class="col-md-12">
                <div class="panel">
                    @*<div class="panel-heading">
                        <div class="panel-title">
                            <div class="panel-action">
                                <a href="javascript:;" data-toggle="panel"></a>
                                <a href="javascript:;" data-toggle="remove"></a>
                            </div>
                        </div>
                     </div>*@
                    <div class="panel-body">
                        @*<form class="bottom-margin" id="validateForm" method="post" action="DMR_Registration.asp" novalidate>*@
                            <fieldset>
                                @*<legend>Please Enter Customer Mobile No</legend>*@
                                <div class="row"> </div>
                                <div class="form-group has-iconed">
                                    <label>Mobile No</label>
                                    <div class="iconed-input">                                        
                                        @Html.EditorFor(m => m.MobileNo, new { htmlAttributes = new { @style = "width:50%; padding:5px;", placeholder = "Mobile No" } })
