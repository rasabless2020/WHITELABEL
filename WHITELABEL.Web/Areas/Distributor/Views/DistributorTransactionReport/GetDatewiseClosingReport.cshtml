@using NonFactors.Mvc.Grid;
@using WHITELABEL.Web.Helper;
@model WHITELABEL.Web.Areas.Distributor.Models.DistributorAccouontsModel
@{
    ViewBag.Title = "Get today Date wise Closing eport";
    Layout = "~/Areas/Distributor/Views/Shared/_LayoutDistributor.cshtml";
}


<div class="form-horizontal padding-top-20">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12 row headcolor">
                <div class="col-md-4" style="text-align:left; padding-top:3px;"><i class="fa fa-edit   fa-3x"></i> </div>

                <div class="col-md-8" style="text-align:right; padding-top:10px;">
                    <h3>
                        Merchant Current date wise opening and closing report
                    </h3>
                </div>
            </div>
        </div>


        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-heading">
                        <div class="card-title text-left">
                            <button id="btnExportSuperrecoard" class="btn btn-info btn-xs"><span class="ion-forward"></span>EXPORT</button>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row example-row">
                            <div class="col-md-12 mt-2">@Html.AjaxGrid(Url.Action("IndexGridGetDatewiseClosingReport", "DistributorTransactionReport", new { area = "Distributor" }))</div>
                        </div>
                    </div>
                    <div class="panel-footer text-right">
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("[id$=btnExportSuperrecoard]").click(function (e) {
            window.open('data:application/vnd.ms-excel,' + encodeURIComponent($('div[id$=my-ajax-grid]').html()));
            e.preventDefault();
        });
    </script>