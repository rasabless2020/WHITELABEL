<script type="text/javascript">
    $(document).ready(function () {
        $('#progressMerchantInfo').removeClass("hidden");
        $('#progressMerchantInfo').hide();
    })
    function OnSuccessMerchantInfo(response) {
        var message = response;
        debugger;
        if (message == "Merchant Added Successfully") {
            $("#ADDMERCHANTInfo").trigger("reset");
            bootbox.alert({
                message: message,
                size: 'small',
                callback: function () {
                    console.log(message);
                    var url = "/Super/SuperAddMerchant/ChangeMerchantDistributor";
                    window.location.href = url;
                }
            });
            
        }
        else {
            $("#ADDMERCHANTInfo").trigger("reset");
            bootbox.alert({
                message: message,
                size: 'small',
                callback: function () {
                    console.log(message);
                }
            })
        }
        //callGeocodeMobile();
        //alert(message);
    }
    function OnFailureMerchantInfo(response) {
        alert("Error occured.");
    }
</script>
<script type="text/javascript">
    function myShowFunction() {
        var x = document.getElementById("ShowMerchantpassword");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
    $(document).ready(function () {
        $('#ShowMerchantpassword').attr('type', 'password');
    });
</script>
<script>
    $('#emailaddress').on('input blur change keyup', function () {

    if ($(this).val().length != 0) {
        var token = $(':input[name="__RequestVerificationToken"]').val();
        $.ajax({
            url: "/SuperAddMerchant/CheckEmailAvailability?area=Super",
            //url: "@Url.Action("CheckEmailAvailability", "MemberAPILabel", new {area="Admin"})",
            data: {
                __RequestVerificationToken: token,
                emailid: $(this).val()
            },
            cache: false,
            type: "POST",
            success: function (data) {
                // DONE                        
                if (data.result == "available") {
                    $('#emailaddress').css('border', '3px #090 solid');
                    $('#btnsubmit').attr('disabled', false);
                }
                else {
                    $('#emailaddress').css('border', '3px #C33 solid');
                    $('#btnsubmit').attr('disabled', true);
                    //alert("This email id is already registered");
                }
            },
            error: function (xhr, status, error) {
                console.log(xhr.responseText);
                alert("message : \n" + "An error occurred" + "\n status : \n" + status + " \n error : \n" + error);
            }
        });
    }
    else {
        $('#btnsubmit').attr('disabled', true);
    }
});
</script>


