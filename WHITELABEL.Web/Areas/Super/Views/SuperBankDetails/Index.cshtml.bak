@using NonFactors.Mvc.Grid;
@{
    ViewBag.Title = "Index";
    //Layout = "~/Areas/Super/Views/Shared/_SuperLayout.cshtml";
    Layout = "~/Areas/Super/Views/Shared/_SuperNewLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal padding-top-20">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-heading">
                            <div class="card-title row">
                                <div class="col-md-6 text-left">
                                    <a href="@(Url.Action("ExportIndex","SuperBankDetails",new {area="Super"}) + ViewContext.HttpContext.Request.QueryString)" class="btn btn-info btn-xs"><span class="ion-forward"></span>Export</a>
                                </div>
                                <div class="col-md-6 text-right">
                                    <a href="@Url.Action("BankDetails", "SuperBankDetails", new { area="Super"})" class="btn btn-info btn-xs text-color-white"><span class="ion-plus"></span> New Bank</a>
                                </div>

                            </div>
                        </div><!--.panel-heading-->
                        <div class="panel-body">
                            <div class="row example-row">

                                @Html.AjaxGrid(Url.Action("IndexGrid", "SuperBankDetails", new { area = "Super" }))
                            </div><!--.row-->
                        </div><!--.panel-body-->
                        <div class="panel-footer text-right">

                        </div>
                    </div><!--.panel-->
                </div>
            </div><!--.col-md-12-->
        </div><!--.row-->
    </div>    
    @Scripts.Render("~/bundles/SuperBankDetails");

}