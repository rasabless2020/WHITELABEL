@model WHITELABEL.Data.Models.TBL_WHITE_LEVEL_HOSTING_DETAILS
@{
    ViewBag.Title = "UpdateHostingDetails";
    Layout = "~/Areas/Super/Views/Shared/_SuperLayout.cshtml";
}

@using (Html.BeginForm("UpdateHostingDetails", "SuperHosting", FormMethod.Post, new { area = "Super", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.SLN)

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h4>Hi, @ViewBag.membername</h4>
                        @Html.HiddenFor(model => model.MEM_ID)
                        @Html.HiddenFor(model => model.SLN)
                    </div><!--.panel - heading-->
                    <div class="panel-body">
                        <div class="row example-row">
                            <div class="col-md-6">
                                <div class="inputer floating-label">
                                    <div class="input-wrapper">
                                        @Html.EditorFor(model => model.COMPANY_NAME, new { htmlAttributes = new { @class = "form-control" } })
                                        <label for="COMPANY_NAME">Company Name</label>
                                    </div>
                                    <span>@Html.ValidationMessageFor(model => model.COMPANY_NAME, "", new { @class = "text-danger" })</span>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-6">
                                <div class="inputer floating-label">
                                    <div class="input-wrapper">
                                        @Html.EditorFor(model => model.DOMAIN, new { htmlAttributes = new { @class = "form-control" } })
                                        <label for="DOMAIN">DOMAIN</label>
                                    </div>
                                    <span>@Html.ValidationMessageFor(model => model.DOMAIN, "", new { @class = "text-danger" })</span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="inputer floating-label">
                                    <div class="input-wrapper">
                                        @Html.EditorFor(model => model.LONG_CODE, new { htmlAttributes = new { @class = "form-control" } })
                                        <label for="LONG_CODE">LONG_CODE</label>
                                    </div>
                                    <span>@Html.ValidationMessageFor(model => model.LONG_CODE, "", new { @class = "text-danger" })</span>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-6">
                                <div class="col-md-3">
                                    <div class="floating-label">
                                        <div class="input-wrapper">
                                            <p class="help-block">Upload MOTO</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="floating-label">
                                        <div class="input-wrapper">
                                            <input type="file" name="MotoFile" id="exampleInputMotoFile">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-6">
                                <div class="col-md-3">
                                    <div class="floating-label">
                                        <div class="input-wrapper">
                                            <p class="help-block">Upload Logo</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="floating-label">
                                        <div class="input-wrapper">
                                            <input type="file" name="LogoFile" id="exampleInputLogoFile">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-6">
                                <div class="col-md-3">
                                    <div class="floating-label">
                                        <div class="input-wrapper">
                                            <p class="help-block">Upload Banner</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="floating-label">
                                        <div class="input-wrapper">
                                            <input type="file" name="BannerFile" id="exampleInputBannerFile">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!--.row-->
                    </div><!--.panel-body-->
                </div><!--.panel-->
            </div><!--.col-md-12-->
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-cyan pull-right" />
            </div>
        </div>
    </div>
}


