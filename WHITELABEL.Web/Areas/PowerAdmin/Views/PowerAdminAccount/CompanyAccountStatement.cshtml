@using NonFactors.Mvc.Grid;
@using WHITELABEL.Web.Helper;
@model IGrid<WHITELABEL.Data.Models.TBL_ACCOUNTS>
@{
    ViewBag.Title = "Company Account Statement";
    //Layout = "~/Areas/PowerAdmin/Views/Shared/_PowerAdminLayout.cshtml";
   Layout = "~/Areas/PowerAdmin/Views/Shared/_LayoutPowerAdmin.cshtml";
}

<div class="form-horizontal padding-top-20">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-body">
                    <div class="row example-row">
                        @Html.AjaxGrid(Url.Action("IndexGrid", "PowerAdminAccount",new {area="PowerAdmin" }))
                    </div><!--.row-->
                </div><!--.panel-body-->
                <div class="panel-footer text-right">
                    <a href="@(Url.Action("ExportIndex", "PowerAdminAccount",new {area="PowerAdmin" }) + ViewContext.HttpContext.Request.QueryString)" class="btn btn-info btn-xs"><span class="ion-forward"></span>Export</a>
                </div>
            </div><!--.panel-->
        </div><!--.col-md-12-->
    </div>
</div>

