<script>
    $(document).ready(function () {
        $('.mvc-grid').mvcgrid({
            reload: true,
            reloadStarted: function () {
                $(".divFooterTotalComm").remove();
            },
        });
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {

        $("#WhitelevelList").change(function () {
            $("#SuperList").empty();
            $("#SuperList").val("--Select--");
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetSuperDistributor")',
                    dataType: 'json',
                    data: { Disid: $("#WhitelevelList").val() },
                    success: function (states) {
                        $("#SuperList").append('<option selected value="">--Select Super--</option>');
                        $.each(states, function (i, state) {
                            $("#SuperList").append('<option value="' + state.IDValue + '">' +
                                state.TextValue + '</option>');
                        });

                        var dropdownval = $('#SuperList').val();
                        var Whitelevel = $('#WhitelevelList').val();
                        var status = $('#TransactionStatus').val();
                        $('.mvc-grid').mvcgrid({
                            query: 'whitelevel=' + Whitelevel + '&search=' + dropdownval + '&Status=' + status,
                            //query: 'search=' + dropdownval + '&Status=' + status,
                            reload: true,
                            reloadStarted: function () {
                                $(".divFooterTotalComm").remove();
                            },
                        });
                    },
                    error: function (ex) {
                        $("#SuperList").append('<option selected value="">--Select Super--</option>');
                        var dropdownval = $('#SuperList').val();
                        var Whitelevel = $('#WhitelevelList').val();
                        var status = $('#TransactionStatus').val();
                        $('.mvc-grid').mvcgrid({
                            query: 'whitelevel=' + Whitelevel + '&search=' + dropdownval + '&Status=' + status,
                            //query: 'search=' + dropdownval + '&Status=' + status,
                            reload: true,
                            reloadStarted: function () {
                                $(".divFooterTotalComm").remove();
                            },
                        });
                        //alert('Failed to retrieve data.' + ex);
                    }
            });
                var dropdownval = '';
                var Whitelevel = '';
                var status = '';
                $('.mvc-grid').mvcgrid({
                    query: 'whitelevel=' + Whitelevel + '&search=' + dropdownval + '&Status=' + status,
                    //query: 'search=' + dropdownval + '&Status=' + status,
                    reload: true,
                    reloadStarted: function () {
                        $(".divFooterTotalComm").remove();
                    },
                });
                return false;
            })
        });
</script>
<script type="text/javascript">
    $("#btnExportSuperrecoard").click(function () {
        var url = '@(Url.Action("ExportIndexPASuperAdminReport", "PowerAdminTransactionReport", new {area="PowerAdmin" }) + ViewContext.HttpContext.Request.QueryString)?whitelevel=' + $("#WhitelevelList").val() + '&Disid=' + $("#SuperList").val() + '&statusval=' + $("#TransactionStatus").val();
        window.location.href = url;
    })
</script>

<script type="text/javascript">

    $("[id$=btnExport]").click(function (e) {
        window.open('data:application/vnd.ms-excel,' + encodeURIComponent($('div[id$=my-ajax-grid]').html()));
        e.preventDefault();
    });
</script>


