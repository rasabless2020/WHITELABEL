@model WHITELABEL.Data.Models.TBL_APPLICATION_FOR_RAIL_UTILITY
@using WHITELABEL.Web.Helper;
@using NonFactors.Mvc.Grid;
@{
    ViewBag.Title = "Index";
   Layout = "~/Areas/PowerAdmin/Views/Shared/_LayoutPowerAdmin.cshtml";
}
@*@Scripts.Render("~/bundles/PowerAdminRailUtility")*@
<script src="~/Areas/PowerAdmin/PowerAdminHelperJS/PowerAdminRailUTLJs/Index.js"></script>
<div class="row">
    <div class="col-md-12 padding-top-20">
        <div class="panel">
            <div class="panel-body">
                @Html.AjaxGrid(Url.Action("Indexgrid", "PowerAdminRailUtilityApplication", new { area = "PowerAdmin", id = "my-BeneficiaryList" }))
            </div>
        </div>
    </div>
    <!--.col-md-12-->
</div>

<div id="transactionvalueid" class="modal scale fade transd" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Finger Print Device</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="col-md-4" style="padding-top:10px;">Rail ID : </div>
                    <div class="col-md-8">
                        <div class="inputer">
                            <div class="input-wrapper">
                                <div id="divRailId">
                                    <input type="text" id="txtRail_IDValue" placeholder="Rail Password" value="" class="form-control" />
                                    <input type="hidden" id="hdn_value" />
                                    <input type="hidden" id="ApplicantId" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12">
                    <div class="col-md-4" style="padding-top:10px;">Password: </div>
                    <div class="col-md-8">
                        <div class="inputer">
                            <div class="input-wrapper" >
                                <div id="divPwd">
                                    <input type="text" id="txtRailPassword" placeholder="Rail Password" value="" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @*<button type="button" id="valuesubmit" class="btn btn-success">Save</button>*@
                <button type="button" id="valuesubmit" class="btn btn-success" onclick="ApplicationApprove($('#txtRail_IDValue').val(),$('#txtRailPassword').val(),$('#hdn_value').val(),$('#ApplicantId').val());">Approve Application</button>
            </div>
        </div>
    </div>

</div>