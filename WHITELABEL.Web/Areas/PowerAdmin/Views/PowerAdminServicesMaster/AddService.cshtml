@model WHITELABEL.Data.Models.TBL_SETTINGS_SERVICES_MASTER
@using WHITELABEL.Web.Helper;
@{
    ViewBag.Title = "Add Service";
    //Layout = "~/Areas/PowerAdmin/Views/Shared/_PowerAdminLayout.cshtml";
   Layout = "~/Areas/PowerAdmin/Views/Shared/_LayoutPowerAdmin.cshtml";
}

@using (Html.BeginForm("AddService", "PowerAdminServicesMaster", FormMethod.Post, new { area = "PowerAdmin" }))
{
    <div class="form-horizontal padding-top-20">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MEM_ID)
        @Html.HiddenFor(model => model.SLN)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-heading">
                    </div><!--.panel-heading-->
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Service Name</label>
                                        <div class="col-md-9">
                                            <div class="inputer">
                                                <div class="input-wrapper">
                                                    @Html.HiddenFor(model => model.SLN)
                                                    @Html.EditorFor(model => model.SERVICE_NAME, new { htmlAttributes = new { @class = "form-control", @placeholder = "Service Name" } })
                                                </div>
                                                <span class="help-block"><small>@Html.ValidationMessageFor(model => model.SERVICE_NAME, "", new { @class = "text-danger" })</small></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Service Description</label>
                                        <div class="col-md-9">
                                            <div class="inputer">
                                                <div class="input-wrapper">
                                                    @Html.EditorFor(model => model.SERVICE_DESC, new { htmlAttributes = new { @class = "form-control", @placeholder = "Service Description" } })
                                                </div>
                                                <span class="help-block"><small>@Html.ValidationMessageFor(model => model.SERVICE_DESC, "", new { @class = "text-danger" })</small></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Service Status</label>
                                        <div class="col-md-9">
                                            <div class="inputer">
                                                <div class="input-wrapper">
                                                    @Html.DropDownListFor(m => m.ACTIVESTATUS, new List<SelectListItem>
                                                                { new SelectListItem{Text="Active", Value="true" },
                                                                    new SelectListItem{Text="Inactive", Value="false"}}, new { id = "ServiceStatusId", @class = "form-control" })                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3"></div>
                        </div><!--.row-->
                    </div><!--.panel-body-->
                    <div class="panel-footer">
                        @*<div class="col-lg-6">
                        </div>*@
                        <div class="col-lg-12 text-center">
                            @if (ViewBag.checkStatus == "0")
                            {
                                <input type="submit" value="Create" class="btn btn-cyan" />                               
                            }
                            else
                            {
                                <input type="submit" value="Update" class="btn btn-cyan" />                              
                            }
                            <a href="@Url.Action("Index", "PowerAdminServicesMaster", new { area = "PowerAdmin" })" class="btn btn-cyan">Back</a>
                        </div>
                        <div class="clearfix"></div>
                        <div class="margin-top-20"></div>
            
                        @if (ViewBag.msg != null && ViewBag.msg!="")
                        {
                            <div id="informationMessage" class="text-center alert alert-success">
                                <span style="width:100%;text-align:center;">@ViewBag.msg </span>
                            </div>
                        }
                    </div>

                </div><!--.panel-->
            </div><!--.col-md-12-->
        </div>
    </div>
    <style>
        .form-horizontal .control-label {
            text-align: left
        }
    </style>
}
<script>
     $(document).ready(function () {
         window.setTimeout(function () {
             $("#informationMessage").fadeOut('slow');
         }, 2000);
     });
</script>

