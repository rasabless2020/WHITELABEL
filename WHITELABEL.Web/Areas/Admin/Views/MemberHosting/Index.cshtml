@using NonFactors.Mvc.Grid;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-horizontal padding-top-20">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">

                <div class="panel-body">
                    <div class="row example-row">

                        @Html.AjaxGrid(Url.Action("IndexGrid", "MemberHosting",new {area="Admin" }))
                    </div><!--.row-->
                </div><!--.panel-body-->
                <div class="panel-footer text-right">
                    <a href="@(Url.Action("ExportIndex","MemberHosting",new {area="Admin" }, null) + ViewContext.HttpContext.Request.QueryString)" class="btn btn-info btn-xs"><span class="ion-forward"></span> Export</a>
                </div>


            </div><!--.panel-->
        </div><!--.col-md-12-->
    </div><!--.row-->

</div>

