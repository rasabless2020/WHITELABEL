                                    <div class="col-md-9">
                                        <div class="inputer">
                                            <div class="md-form">
                                                @Html.EditorFor(model => model.TO_DATE, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control date", id = "txtToDate", @onkeydown = "return false;", @placeholder = "yyyy-MM-dd" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="inputer">
                                    <div class="md-form">
                                        <a href="#" class="btn btn-primary" id="btnSearchDAteWise">Search Date Wise</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row example-row">@Html.AjaxGrid(Url.Action("MerchantCommissionGrid", "MemberTransactionReport", new { area = "Admin" }))</div>
                    </div>                 
                </div>
            </div>
        </div>
    </div>
</div>

