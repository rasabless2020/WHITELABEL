@model WHITELABEL.Web.Areas.Merchant.Models.BeneficiaryAccountVerification
@{
    ViewBag.Title = "VERIFYBENEFICIARYACCOUNT";
    //Layout = "~/Areas/Merchant/Views/Shared/_MerchantLayout.cshtml";
}

@using (Ajax.BeginForm("PostVerifyBeneficiaryAccount", "MerchantDMRDashboard", new AjaxOptions { OnSuccess = "OnSuccessMsgVal", OnFailure = "OnFailureMsgVal", LoadingElementId = "progressMsgVal" }, new { area = "Merchant" }))
{
    @Html.AntiForgeryToken()
    <div class="display-animation">
        <div class="row no-gutters">
            <div class="col-md-12">
                <div class="panel">
                    @*<div class="panel-heading">
                            <div class="panel-title">
                                <h4> Money Remittance Beneficiary Registration</h4>
                                <div class="panel-action">
                                    <a href="javascript:;" data-toggle="panel"></a>
                                    <a href="javascript:;" data-toggle="remove"></a>
                                </div>
                            </div>
                        </div>*@
                    <div class="panel-body">
                        <fieldset>
                            @*<legend>Please Enter Customer Mobile No</legend>*@
                            <div class="row"> </div>
                            <div class="form-group has-iconed">
                                <label>Mobile No</label>
                                <div class="iconed-input">
                                    @Html.EditorFor(m => m.RemitterMobileNo, new { htmlAttributes = new { @class = "form-control" } })
                                    <span class="help-block"><small>@Html.ValidationMessageFor(model => model.RemitterMobileNo, "", new { @class = "text-danger" })</small></span>
                                </div>
                            </div>
                            <div class="form-group has-iconed">
                                <label>Account No.</label>
                                <div class="iconed-input">
                                    @Html.EditorFor(m => m.BankAccountNo, new { htmlAttributes = new { @class = "form-control" } })
                                    <span class="help-block"><small>@Html.ValidationMessageFor(model => model.BankAccountNo, "", new { @class = "text-danger" })</small></span>
                                </div>
                            </div>
                            <div class="form-group has-iconed">
                                <label>IFSC Code</label>
                                <div class="iconed-input">
                                    @Html.EditorFor(m => m.IFSCCode, new { htmlAttributes = new { @class = "form-control" } })
                                    <span class="help-block"><small>@Html.ValidationMessageFor(model => model.IFSCCode, "", new { @class = "text-danger" })</small></span>
                                </div>
                            </div>
                            @*<div class="form-group has-iconed">
                                    <label>Account No</label>
                                    <div class="iconed-input">
                                        @Html.EditorFor(m => m.Account, new { htmlAttributes = new { @class = "form-control" } })
                                        <span class="help-block"><small>@Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })</small></span>
                                    </div>
                                </div>*@
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-ok"></i> Submit Form</button>
                            </div>
                        </fieldset>
                    </div><!--.panel-body-->
                </div><!--.panel-->
            </div>
        </div>
        <!--.full-content-->
    </div>
}
<div id="progressMsgVal" class="loading hidden">Loading&#8230;</div>
@*<script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>*@
<script type="text/javascript">
        $(document).ready(function () {
            $('#progressMsgVal').removeClass("hidden");
            $('#progressMsgVal').hide();
        })
    function OnSuccessMsgVal(response) {        
        var message = "BENEFICIARY ACCOUNT HAS BEEN "+ response.Verified;
            bootbox.alert({
                message: message,
                size: 'small',
                callback: function () {
                    console.log(message);
                }
            })
            //alert(message);
        }
    function OnFailureMsgVal(response) {
            alert("Error occured.");
        }
</script>


 