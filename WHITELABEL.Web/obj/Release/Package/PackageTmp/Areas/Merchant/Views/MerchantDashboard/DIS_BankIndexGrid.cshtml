@using NonFactors.Mvc.Grid;
@using WHITELABEL.Web.Helper;
@model IEnumerable<WHITELABEL.Data.Models.TBL_SETTINGS_BANK_DETAILS>
@{
    ViewBag.Title = "DIS_BankIndexGrid";
    Layout = null;
    //Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add(model => model.BANK).Titled("Bank Name");
            columns.Add(model => model.IFSC).Titled("Ifsc");
            //columns.Add(model => model.BRANCH).Titled("Branch");
            columns.Add(model => model.ACCOUNT_NO).Titled("Account");

        })
        .Empty("No data found")
        .Id("my-ajax-grid")
        .Pageable(pager =>
        {
            pager.PagesToDisplay = 2;
            pager.RowsPerPage = 2;
        })
        .Filterable()
        .Sortable()
)