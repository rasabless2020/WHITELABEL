@model WHITELABEL.Web.Areas.Merchant.Models.DMRLoginViewModel
@{
    ViewBag.Title = "Money Remittance Login";
    Layout = "~/Areas/Merchant/Views/Shared/_MerchantLayout.cshtml";
}

    <div class="display-animation margin-top-40">
        <div class="row no-gutters">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="panel-title">
                            @*<h4> Money Remittance</h4>*@
                            <div class="panel-action">
                                <a href="javascript:;" data-toggle="panel"></a>
                                <a href="javascript:;" data-toggle="remove"></a>
                            </div><!--.panel-action-->
                        </div><!--.panel-title-->
                    </div><!--.panel-heading-->
                    <div class="panel-body">

                        <form action="~/Merchant/MerchantDMRLogin/Index@(ViewBag.ReturnURL==null?"":"?ReturnURL="+ViewBag.ReturnURL)" method="post">
                            @*<form class="bottom-margin" id="validateForm" method="post" action="DMR_Registration.asp" novalidate>*@
                            <fieldset>
                                <legend>Please Enter Customer Mobile No</legend>
                                <div class="row"> </div>
                                <div class="form-group has-iconed">
                                    <label>Mobile No</label>
                                    <div class="iconed-input">
                                        @Html.TextBoxFor(m => m.MobileNo, new { placeholder = "Enter your Mobile No.", @style = "width:50%; padding:5px;", })
                                        <div style="position:relative; top: -12px; font-size:12px; color:#ffffff;">@Html.ValidationMessageFor(model => model.MobileNo)</div>
                                        @*<input name="mobile" value="" class="form-control" required placeholder="Enter Mobile No" maxlength="10" minlength="10" type="number">*@
                                    </div>
                                </div>
                                <div style="text-align:left; top: 20px; font-size:12px; color:red;">@ViewBag.Message</div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-ok"></i> Submit Form</button>
                                </div>
                            </fieldset>
                        </form>



                    </div><!--.panel-body-->
                </div><!--.panel-->
            </div>


        </div>
        <!--.full-content-->
    </div>
   