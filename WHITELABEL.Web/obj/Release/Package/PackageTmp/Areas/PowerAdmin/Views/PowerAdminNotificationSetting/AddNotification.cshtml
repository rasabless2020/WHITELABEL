
@model WHITELABEL.Data.Models.TBL_NOTIFICATION_SETTING
@{
    ViewBag.Title = "Add Notification";
   Layout = "~/Areas/PowerAdmin/Views/Shared/_LayoutPowerAdmin.cshtml";
}

@using (Html.BeginForm("AddNotification", "PowerAdminNotificationSetting", FormMethod.Post, new { area = "PowerAdmin" }))
{
    <div class="form-horizontal padding-top-20">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-heading">
                    </div><!--.panel-heading-->
                    <div class="panel-body">
                        <div class="clearfix"></div>
                        <div>
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control">Notification Subject</label>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <div class="inputer">
                                                <div class="input-wrapper">
                                                    @Html.EditorFor(m => m.NOTIFICATION_SUBJECT, new { htmlAttributes = new { @class = "form-control", id = "notificationsub" } })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.NOTIFICATION_SUBJECT, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control">Notification Description</label>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <div class="inputer">
                                                <div class="input-wrapper">
                                                    @Html.EditorFor(m => m.NOTIFICATION_DESCRIPTION, new { htmlAttributes = new { @class = "form-control", id = "notificationsub" } })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.NOTIFICATION_DESCRIPTION, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control">Notification Date</label>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <div class="inputer">
                                                <div class="input-wrapper">
                                                    @Html.EditorFor(m => m.NOTIFICATION_DATE, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", id = "txtNotofication", @onkeydown = "return false;" } })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.NOTIFICATION_DATE, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control">Notification Status</label>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="form-group">
                                            <div class="inputer">
                                                <div class="input-wrapper">
                                                    @Html.DropDownListFor(m => m.STATUS, new List<SelectListItem>
                                                                                { new SelectListItem{Text="Active", Value="0"},
                                                                                    new SelectListItem{Text="Deactive", Value="1"}},
                                                                                    "--Select--", new { id = "NotifyStatus", @class = "form-control" })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <!--.row-->
                            <div class="col-md-3"></div>
                        </div>
                    </div><!--.panel-body-->
                    <div class="panel-footer">
                        <div class="col-lg-12 text-center">
                            @if (ViewBag.checkStatus == "0")
                            {
                                <input type="submit" value="Add" class="btn btn-cyan" />
                            }
                            else
                            {
                                <input type="submit" value="Update" class="btn btn-cyan" />
                            }
                            <a href="@Url.Action("Index","PowerAdminNotificationSetting",new{area="PowerAdmin"})" style='margin-right:10px' title='Back' class="btn btn-cyan">Back</a>
                        </div>
                        <div class="clearfix"></div>
                        @*@if (ViewBag.Msg != null)
                        {
                            <div style="padding-top:20px;">
                            <div class="col-md-3"></div>
                            <div id="informationMessage" class="col-md-6 text-center alert alert-success" >
                                <span style="width:100%;text-align:center;">@ViewBag.Msg </span>
                            </div>
                            <div class="col-md-3"></div>
                            </div>
                        }*@
                    </div>

                </div><!--.panel-->
            </div><!--.col-md-12-->
        </div>

    </div>
}

<script>
    $(document).ready(function () {
        window.setTimeout(function () {
            $("#informationMessage").fadeOut('slow');
        }, 2000);
    });

</script>