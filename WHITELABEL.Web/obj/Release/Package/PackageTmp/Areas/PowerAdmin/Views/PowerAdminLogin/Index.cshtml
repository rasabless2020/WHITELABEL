<body class="bg-login printable">
    <div style="text-align:center; padding-top:30px;">
        <img src="~/images/vapron_logo.png" width="200" />
    </div>
    <div class="login-screen">
    
        <div class="panel-login">
            <form action="~/PowerAdmin/PowerAdminLogin/Index@(ViewBag.ReturnURL==null?"":"?ReturnURL="+ViewBag.ReturnURL)" method="post">
                <div id="pane-login" class="panel-body active">
                    <h2>Login to Dashboard</h2>
                    <div class="form-group">
                        <div class="inputer">
                            <div class="input-wrapper">
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter your email address", @class = "form-control" })                                
                            </div>                            
                        </div>
                        <div style="position:relative; top: -12px; font-size:12px; color:#FF0000;">@Html.ValidationMessageFor(model => model.Email)</div>
                    </div><!--.form-group-->
                    <div class="form-group">
                        <div class="inputer">
                            <div class="input-wrapper">
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Enter your password", @class = "form-control" })
                            </div>
                        </div>
                        <div style="position:relative; top: -12px; font-size:12px; color:#FF0000;">@Html.ValidationMessageFor(model => model.Password)</div>
                    </div><!--.form-group-->

                    <div class="form-buttons clearfix">
                        <div class="pull-left">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                        <button type="submit" class="btn btn-blue pull-right">Login</button>
                    </div><!--.form-buttons-->
                    <div style="text-align:center; top: 20px; font-size:12px; color:#FF0000;">@ViewBag.Message</div>
                    <ul class="extra-links">
                        <li><a href="#" class="show-pane-forgot-password">Forgot your password</a></li>
                        @*<li><a href="#" class="show-pane-create-account">Don’t have [company name] account?’ Sign in here</a></li>*@
                    </ul>

                </div><!--#login.panel-body-->
            </form>


            <div id="pane-forgot-password" class="panel-body">
                <h2>Forgot Your Password</h2>
                <div class="form-group">
                    <div class="inputer">
                        <div class="input-wrapper">
                            <input type="email" class="form-control" placeholder="Enter your email address">
                        </div>
                    </div>
                </div><!--.form-group-->
                <div class="form-buttons clearfix">
                    <button type="submit" class="btn btn-white pull-left show-pane-login">Cancel</button>
                    <button type="submit" class="btn btn-blue pull-right">Send</button>
                </div><!--.form-buttons-->
            </div><!--#pane-forgot-password.panel-body-->

            <div id="pane-create-account" class="panel-body">
                <h2>Create a New Account</h2>
                <div class="form-group">
                    <div class="inputer">
                        <div class="input-wrapper">
                            <input type="text" class="form-control" placeholder="Enter your full name">
                        </div>
                    </div>
                </div><!--.form-group-->
                <div class="form-group">
                    <div class="inputer">
                        <div class="input-wrapper">
                            <input type="email" class="form-control" placeholder="Enter your email address">
                        </div>
                    </div>
                </div><!--.form-group-->
                <div class="form-group">
                    <div class="inputer">
                        <div class="input-wrapper">
                            <input type="password" class="form-control" placeholder="Enter your password">
                        </div>
                    </div>
                </div><!--.form-group-->
                <div class="form-group">
                    <div class="inputer">
                        <div class="input-wrapper">
                            <input type="password" class="form-control" placeholder="Enter your password again">
                        </div>
                    </div>
                </div><!--.form-group-->
                <div class="form-group">
                    <label><input type="checkbox" name="remember" value="1"> I have read and agree to the term of use.</label>
                </div>
                <div class="form-buttons clearfix">
                    <button type="submit" class="btn btn-white pull-left show-pane-login">Cancel</button>
                    <button type="submit" class="btn btn-blue pull-right">Sign In</button>
                </div><!--.form-buttons-->
            </div><!--#login.panel-body-->

        </div><!--.blur-content-->
    </div><!--.login-screen-->
    @*<div class="bg-blur dark">*@
    <div class="bg-blur dark">
        <div class="overlay"></div><!--.overlay-->
    </div><!--.bg-blur-->

    <svg version="1.1" xmlns='http://www.w3.org/2000/svg'>
        <filter id='blur'>
            <feGaussianBlur stdDeviation='7' />
        </filter>
    </svg>

