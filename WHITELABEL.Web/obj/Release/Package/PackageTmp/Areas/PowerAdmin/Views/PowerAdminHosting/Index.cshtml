@using NonFactors.Mvc.Grid;
@{
    ViewBag.Title = "White Level Hosting Details";
    //Layout = "~/Areas/PowerAdmin/Views/Shared/_PowerAdminLayout.cshtml";
   Layout = "~/Areas/PowerAdmin/Views/Shared/_LayoutPowerAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal padding-top-20">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="panel-heading">
                            <div class="card-title ">
                                <div class="text-left">
                                    <a href="@(Url.Action("ExportIndex", "PowerAdminHosting", new { area = "PowerAdmin" }) + ViewContext.HttpContext.Request.QueryString)" class="btn btn-info btn-xs"><span class="ion-forward"></span> Export</a>
                                </div>
                            </div>

                        </div>
                        <div class="panel-body">
                            <div class="row example-row">

                                @Html.AjaxGrid(Url.Action("IndexGrid", "PowerAdminHosting", new { area = "PowerAdmin" }))
                            </div><!--.row-->
                        </div><!--.panel-body-->



                    </div><!--.panel-->
                    </div>
                </div><!--.col-md-12-->
            </div><!--.row-->

    </div>
}