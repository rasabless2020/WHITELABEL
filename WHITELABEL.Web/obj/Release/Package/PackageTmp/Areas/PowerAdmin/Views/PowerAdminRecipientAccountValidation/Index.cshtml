@using NonFactors.Mvc.Grid;
@model WHITELABEL.Data.Models.TBL_ACCOUNT_VERIFICATION_TABLE
@{
    /**/

    ViewBag.Title = "Index";
   Layout = "~/Areas/PowerAdmin/Views/Shared/_LayoutPowerAdmin.cshtml";
}

@*@Scripts.Render("~/bundles/PowerAdminAPITransactionVerification")*@
<script src="~/Areas/PowerAdmin/PowerAdminHelperJS/APITransactionValidationJs/Index.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal padding-top-20">
        <div class="row">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <div class="text-right col-md-12">
                                <div class="panel-title" align="right"><a href="#" data-toggle="modal" data-target=".transd" id="transactionvalueid" class="btn btn-info btn-xs text-color-white"><span class="ion-plus"></span> New Api Account verify Amt</a></div>
                            </div>
                        </div>
                    </div><!--.panel-heading-->
                    <div class="panel-body">
                        <div class="row example-row">
                            @Html.AjaxGrid(Url.Action("IndexGrid", "PowerAdminRecipientAccountValidation", new { area = "PowerAdmin" }))
                        </div><!--.row-->
                    </div><!--.panel-body-->

                </div><!--.panel-->
            </div><!--.col-md-12-->
        </div><!--.row-->
    </div>

}

<div id="transactionvalueid" class="modal scale fade transd" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Tax Master</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                

            </div>
            <div class="modal-body">

                <div class="col-md-12">
                    <div class="col-md-6" style="padding-top:10px;">API Account verification Amount : </div>
                    <div class="col-md-6">
                        <div class="inputer">
                            <div class="input-wrapper">
                                <input type="text" id="APITransAmt" value="" class="form-control" pattern="\d{1,2}(\.\d{0,4})?" onkeypress="return isNumberKey(event)" />
                                <span><small></small></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12">
                    <div class="col-md-6" style="padding-top:10px;">Merchant Account verification Amount : </div>
                    <div class="col-md-6">
                        <div class="inputer">
                            <div class="input-wrapper">
                                <input type="text" id="merchantAcntVerification" value="" class="form-control" pattern="\d{1,2}(\.\d{0,4})?" onkeypress="return isNumberKey(event)" />
                            </div>
                            <span><small></small></span>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12">
                    <div class="col-md-6" style="padding-top:10px;">Api Name: </div>
                    <div class="col-md-6">
                        <div class="inputer">
                            <div class="input-wrapper">
                                <input type="text" id="txtAPIName" value="" class="form-control" />
                            </div>
                            <span><small></small></span>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12">
                    <div class="col-md-6" style="padding-top:10px;">Api Verification Status: </div>
                    <div class="col-md-6">
                        <div class="inputer">
                            <div class="input-wrapper">
                                <select id="APITransactionStatus" class="form-control">
                                    <option value="1">Active</option>
                                    <option value="0">Deactive</option>
                                </select>
                            </div>
                            <span><small></small></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="valuesubmit" class="btn btn-success" onclick="SaveAPITransactionDetails($('#APITransAmt').val(),$('#merchantAcntVerification').val(),$('#txtAPIName').val(),$('#APITransactionStatus').val());">Save</button>
            </div>
        </div><!--.modal-content-->
    </div><!--.modal-dialog-->

</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#valuesubmit').attr('disabled', true);
    });

    function isNumberKey(evt) {
        debugger;
        var tds = $('#APITransAmt').val();
        var Gst = $('#merchantAcntVerification').val();

        document.getElementById("valuesubmit").disabled = false;
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        else {

            return true;
            $('#valuesubmit').attr('disabled', false);
        }

    }
</script>



