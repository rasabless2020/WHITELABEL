@model WHITELABEL.Web.Areas.Admin.Models.ManageUserProfileDetails
@{
    ViewBag.Title = "Edit Profile";
    //Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Index", "MemberProfileUpdate", FormMethod.Post, new { area = "Admin" }))
{
    <div class="form-horizontal padding-top-20">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MEM_ID)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            @*<div class="col-md-12">
                <div class="col-md-12 row headcolor">
                    <div class="col-md-4" style="text-align:left; padding-top:3px;"><i class="fa fa-user fa-3x"></i> </div>

                    <div class="col-md-8" style="text-align:right; padding-top:10px;">
                        <h3>
                            Admin Profile
                        </h3>
                    </div>
                </div>
            </div>*@
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="panel-body">
                            <div class="row ">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="control-label col-md-3" style="padding-top:10px;">User Name</label>
                                        <div class="col-md-9">
                                            <div class="inputer">
                                                <div class="md-form">
                                                    @Html.EditorFor(model => model.UName, new { htmlAttributes = new { @class = "form-control", @placeholder = "User Name" } })
                                                </div>
                                                <span class="help-block"><small>@Html.ValidationMessageFor(model => model.UName, "", new { @class = "text-danger" })</small></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="control-label col-md-3" style="padding-top:10px;">Mobile No</label>
                                        <div class="col-md-9">
                                            <div class="inputer">
                                                <div class="md-form">
                                                    @Html.EditorFor(model => model.MEMBER_MOBILE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mobile No" } })
                                                </div>
                                                <span class="help-block"><small>@Html.ValidationMessageFor(model => model.MEMBER_MOBILE, "", new { @class = "text-danger" })</small></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div><!--.row-->
                            <div class="row ">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="control-label col-md-3" style="padding-top:10px;">Member Name</label>
                                        <div class="col-md-9">
                                            <div class="inputer">
                                                <div class="md-form">
                                                    @Html.EditorFor(model => model.MEMBER_NAME, new { htmlAttributes = new { @class = "form-control", @placeholder = "Member Name" } })
                                                </div>
                                                <span class="help-block"><small>@Html.ValidationMessageFor(model => model.MEMBER_NAME, "", new { @class = "text-danger" })</small></span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="control-label col-md-3" style="padding-top:10px;">Company Name</label>
                                        <div class="col-md-9">
                                            <div class="inputer">
                                                <div class="md-form">
                                                    @Html.EditorFor(model => model.COMPANY, new { htmlAttributes = new { @class = "form-control", @placeholder = "Company Name" } })
                                                </div>
                                                <span class="help-block"><small>@Html.ValidationMessageFor(model => model.COMPANY, "", new { @class = "text-danger" })</small></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div><!--.row-->
                            <div class="row ">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="control-label col-md-3" style="padding-top:10px;">Member Address</label>
                                        <div class="col-md-9">
                                            <div class="inputer">
                                                <div class="md-form">
                                                    @Html.EditorFor(model => model.ADDRESS, new { htmlAttributes = new { @class = "form-control", @placeholder = "Member Address" } })
                                                </div>
                                                <span class="help-block"><small>@Html.ValidationMessageFor(model => model.ADDRESS, "", new { @class = "text-danger" })</small></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="control-label col-md-3" style="padding-top:10px;">City</label>
                                        <div class="col-md-9">
                                            <div class="inputer">
                                                <div class="md-form">
                                                    @Html.EditorFor(model => model.CITY, "0", new { htmlAttributes = new { @class = "form-control", @placeholder = "City" } })
                                                </div>
                                                <span class="help-block"><small>@Html.ValidationMessageFor(model => model.CITY, "", new { @class = "text-danger" })</small></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div><!--.row-->
                            <div class="row ">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="control-label col-md-3" style="padding-top:10px;">Pin</label>
                                        <div class="col-md-9">
                                            <div class="inputer">
                                                <div class="md-form">
                                                    @Html.EditorFor(model => model.PIN, new { htmlAttributes = new { @class = "form-control", @placeholder = "Pin No" } })
                                                </div>
                                                <span class="help-block"><small>@Html.ValidationMessageFor(model => model.PIN, "", new { @class = "text-danger" })</small></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="control-label col-md-3" style="padding-top:10px;">Email Address</label>
                                        <div class="col-md-9">
                                            <div class="inputer">
                                                <div class="md-form">
                                                    @Html.EditorFor(model => model.EMAIL_ID, "0", new { htmlAttributes = new { @class = "form-control", id = "emailaddress1", @placeholder = "Email Address", @readonly = "readonly" } })
                                                </div>
                                                <span class="help-block"><small>@Html.ValidationMessageFor(model => model.EMAIL_ID, "", new { @class = "text-danger" })</small></span>

                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div><!--.panel-body-->
                        <div class="panel-footer">
                            <div class="text-center mt-4">
                                <input type="submit" value="Save" class="btn btn-primary" id="btnsubmit" />
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="panel-heading text-right">
                            @if (ViewBag.Message != null)
                            {
                                <div id="informationMessage" class="text-center alert alert-success">
                                    <span style="width:100%;text-align:center;">@ViewBag.Message </span>

                                </div>
                            }
                        </div><!--.panel-heading-->
                    </div><!--.panel-->
                </div>
            </div><!--.col-md-12-->
        </div>

    </div>
}
<script>
        $(document).ready(function () {

            window.setTimeout(function () {
                $("#informationMessage").fadeOut('slow');
            }, 2000);
        });

</script>