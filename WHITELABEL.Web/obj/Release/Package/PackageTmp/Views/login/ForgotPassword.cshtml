<body class="bg-login printable">


    @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post, new { area = "" }))
    {
        @Html.AntiForgeryToken()
        <div class="login-screen">
            <div class="panel-login">
                <div>
                    <span style="color:red; font-weight:bold;">@ViewBag.Message</span>
                </div>
                <div id="pane-forgot-password">
                    <h2>Forgot Your Password</h2>
                    <div class="form-group" style="border:1px solid #ccc; border-radius:2px">

                        @Html.TextBoxFor(model => model.Email, new { id = "EmailID", @class = "form-control", placeholder = "Email Address" })
                    </div><!--.form-group-->
                    <div style="position:relative; top: -12px; font-size:12px; color:#FF0000;">
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    @*<div class="form-buttons clearfix">*@
                    <div>
                        @*<button type="submit" class="btn btn-white pull-left show-pane-login">Cancel</button>*@
                        <button type="submit" class="btn btn-blue pull-right">Send</button>

                    </div><!--.form-buttons-->
                </div>
            </div>
        </div>
    }





    @*<div class="bg-blur dark">*@
    <div class="bg-blur dark">
        <div class="overlay"></div><!--.overlay-->
    </div><!--.bg-blur-->

    <svg version="1.1" xmlns='http://www.w3.org/2000/svg'>
        <filter id='blur'>
            <feGaussianBlur stdDeviation='7' />
        </filter>
    </svg>

