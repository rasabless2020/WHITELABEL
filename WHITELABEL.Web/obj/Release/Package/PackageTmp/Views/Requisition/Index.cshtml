@using NonFactors.Mvc.Grid;
@model WHITELABEL.Data.Models.TBL_BALANCE_TRANSFER_LOGS  
@{
    ViewBag.Title = "Requisition List";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-horizontal padding-top-20">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    <div class="panel-title" align="right"><a href="@Url.Action("RequisitionDetails", "Requisition")"class="btn btn-info btn-xs text-color-white"><span class="ion-plus"></span>Add New Requisition</a></div>
                </div><!--.panel-heading-->
                <div class="panel-body">
                    <div class="row example-row">
                        
                        @Html.AjaxGrid(Url.Action("IndexGrid", "Requisition"))
                    </div><!--.row-->
                </div><!--.panel-body-->
                <div class="panel-footer text-right">
                    <a href="@(Url.Action("GridExportIndex") + ViewContext.HttpContext.Request.QueryString)" class="btn btn-info btn-xs"><span class="ion-forward"></span>Export</a>                    
                </div>

            </div><!--.panel-->
        </div><!--.col-md-12-->
    </div><!--.row-->

</div>
@Scripts.Render("~/bundles/Requisition");
   
    <div class="modal scale fade transd" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Transaction Information</h4>

                </div>
                <div class="modal-body">

                    <div class="col-md-6">
                        <div class="inputer floating-label">
                            <div class="input-wrapper">
                                Member Name <input type="text" id="username" value="" class="form-control" />
                                <input type="hidden" id="sln" />
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-6">
                        <div class="inputer floating-label">
                            <div class="input-wrapper">
                                Transaction Date <input type="text" id="TransactionDate" value="" class="form-control bootstrap-daterangepicker-basic" />
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                    <div class="col-md-6">
                        <div class="inputer floating-label">
                            <div class="input-wrapper">
                                Bank Details <input type="text" id="BankDetails" value="" class="form-control" />

                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-6">
                        <div class="inputer floating-label">
                            <div class="input-wrapper">
                                Amount <input type="text" id="Amount" value="" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-flat btn-default" onclick="TransactionDecline();">Decline</button>
                    <button type="button" class="btn btn-flat btn-primary" onclick="updateStatus();">Approve</button>
                </div>
            </div><!--.modal-content-->
        </div><!--.modal-dialog-->
    </div>

 